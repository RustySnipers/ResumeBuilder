# ResumeBuilder Environment Variables
# Copy this file to .env and fill in your values

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/resumebuilder

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Application Configuration
ENV=development
LOG_LEVEL=INFO
DEBUG=True
APP_BASE_URL=http://localhost:3000

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (Phase 5.2)
EMAIL_PROVIDER=console  # Options: console (dev), smtp, sendgrid, aws_ses
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_FROM=noreply@resumebuilder.com
SMTP_FROM_NAME=ResumeBuilder

# Rate Limiting
RATE_LIMIT_PER_MINUTE=50

# LLM Configuration
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=4096
TEMPERATURE=1.0

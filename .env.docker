# ResumeBuilder Docker Compose Environment Configuration
# This file is used for local Docker Compose deployment
# Copy this to .env and update with your values

# ============================================================================
# SECURITY (REQUIRED - GENERATE UNIQUE KEYS)
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_UNIQUE_KEY_HERE
JWT_SECRET_KEY=CHANGE_ME_GENERATE_UNIQUE_KEY_HERE

# ============================================================================
# ANTHROPIC CLAUDE API (REQUIRED)
# ============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ============================================================================
# CORE CONFIGURATION
# ============================================================================
ENV=production
DEBUG=False
LOG_LEVEL=INFO

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=4096
TEMPERATURE=1.0

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Docker Compose uses internal networking - no need to change these
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=10

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Docker Compose uses internal networking - no need to change these
CACHE_TTL_SECONDS=3600
EXPORT_CACHE_TTL=900

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=5000
EXPORTS_PER_MINUTE=10
EXPORTS_PER_DAY=50

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# For local testing, use 'console' to print emails to logs
# For production, use 'smtp', 'sendgrid', or 'aws_ses'
EMAIL_PROVIDER=console

# SMTP Configuration (if using EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_FROM=noreply@resumebuilder.local
SMTP_FROM_NAME=ResumeBuilder

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Update with your domain in production
APP_BASE_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# WEBHOOK WORKER CONFIGURATION (Phase 7)
# ============================================================================
WEBHOOK_PENDING_BATCH_SIZE=100
WEBHOOK_RETRY_BATCH_SIZE=100
WEBHOOK_SLEEP_SECONDS=10

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_REGISTRATION=True
ENABLE_ANALYTICS=True
ENABLE_RATE_LIMITING=True
ENABLE_CACHING=True

# ============================================================================
# DEPLOYMENT NOTES
# ============================================================================
# 1. Generate unique SECRET_KEY and JWT_SECRET_KEY using:
#    openssl rand -hex 32
#
# 2. Get Anthropic API key from console.anthropic.com
#
# 3. For email testing, use EMAIL_PROVIDER=console to print to logs
#
# 4. For production email, configure SMTP settings or use SendGrid/AWS SES
#
# 5. Update APP_BASE_URL with your actual domain in production
#
# 6. Update ALLOWED_ORIGINS with your frontend domains
